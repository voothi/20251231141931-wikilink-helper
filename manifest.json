{
  "manifest_version": 3,
  "name": "Wikilink Helper",
  "version": "1.2.2",
  "description": "Detects wikilinks, improves readability, and allows quick copying of target IDs or descriptions.",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wikilink Helper Settings",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://gist.github.com/*"
      ],
      "js": [
        "src/core/settings.js",
        "src/core/parser.js",
        "src/handlers/base.js",
        "src/handlers/github.js",
        "src/main.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}